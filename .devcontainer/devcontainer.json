{
  "name": "Jekyll Preview",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.3",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "bundle install",
  "forwardPorts": [4000],
  "portsAttributes": {
    "4000": {"label": "Jekyll"}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-github-actions"
      ]
    }
  }
}
